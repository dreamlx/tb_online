                      <%=period.number %>
            </option>
          <% end %>
        </select>
        to:
        <select name="end_period_id">
          <% @periods.each do |period| %>
            <option value="<%= period.id %>"
                    <%= ' selected' if period.id == @now_period %>>
                      <%=period.number %>
            </option>
          <% end %>
        </select>
      </td>
    </tr>
