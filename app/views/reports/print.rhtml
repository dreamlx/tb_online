<hr>
<h3>Summary by user</h3>
<%= start_form_tag({:action => 'summary_by_user'},{:target=>"_blank"} )%>
<table>
  <!--GMU
Job code	
Client(Eng)	
Job Ref	
Job Ptr	
Job Mgr	
Service Line	
contract_number	
Project status-->

  <tr>
    <% if @admin%>
      <td>Partner:<td/><td>
        <select name="project[partner_id]">
          <option value="-1">
            all
          </option>
          <% @people.each do |person| %>
            <% @ptrs.each do |tmp_p| %>
              <% if tmp_p.id == person.id %>
                <option value="<%= person.id %>">
                  <%=person.english_name %>
                </option>
              <% end %>
            <% end %>
          <% end %>
        </select>

      </td>

    <%else%>
      <td>PM<td/><td>
        <select name="pm_select">
          <option value="p">
            partner
          </option>
          <option value="m">
            Manager
          </option>
        </select>
      </td>
    <%end%>



    <td >
      Contract Number:<td/><td>
      <select name="project[contract_number]">
        <option value="-1">
          all
        </option>
        <% @contractNumbers.each do |cNumber| %>
          <option value="<%= cNumber.contract_number %>">
            <%=cNumber.contract_number %>
          </option>
        <% end %>
      </select>
    </td>
    <td>ServiceLine:<td/><td>
      <select name="project[service_id]">
        <option value="-1">
          all
        </option>
        <% @services.each do |service| %>
          <option value="<%= service.id %>">
            <%=service.code %>
          </option>
        <% end %>
      </select>
    </td>
  </tr>
  <tr>



    <td>Job Ref:<td/><td>
      <select name="project[referring_id]">
        <option value="-1">
          all
        </option>
        <% @people.each do |person| %>
          <% @refs.each do |tmp_p| %>
            <% if tmp_p.id == person.id %>
              <option value="<%= person.id %>">
                <%=person.english_name %>
              </option>
            <% end %>
          <% end %>
        <% end %>
      </select>
    </td>
    <td >Prj found:<td/><td>from
      <select name="period_id2">

        <% @periods2.each do |period| %>
          <option value="<%= period.id %>"
                  <%= ' selected' if period.id == @now_period %>>
                    <%=period.number %>
          </option>
        <% end %>
      </select>

      to
      <select name="period_id">

        <% @periods.each do |period| %>
          <option value="<%= period.id %>"
                  <%= ' selected' if period.id == @now_period %>>
                    <%=period.number %>
          </option>
        <% end %>
      </select>
    </td>

    <td>GMU:<td/><td>
      <select name="project[GMU_id]">
        <option value="-1">
          all
        </option>
        <% @GMUs.each do |gmu| %>
          <option value="<%= gmu.id %>">
            <%=gmu.title %>
          </option>
        <% end %>
      </select>
    </td>
  </tr>
  <tr>

    <td>Manager:<td/>
    <td>
      <select name="project[manager_id]">
        <% if @admin or partner%>
          <option value="-1">
            all
          </option>
        <%end%>
        <% @people.each do |person| %>
          <% if @admin or partner%>
            <% @mgrs.each do |tmp_p| %>
              <% if tmp_p.id == person.id %>
                <option value="<%= person.id %>" >
                  <%=person.english_name %>
                </option>
              <% end %>
            <% end %>
          <%else%>
            <% if @now_user == person.id %>
              <option value="<%= person.id %>" >
                <%=person.english_name %>
              </option>
            <% end %>
          <%end%>
        <% end %>



      </select>

    </td>
    <td >
      Job Code:<td/><td><%= text_field("project", "job_code") %>
    </td>
    <td >
      Status:<td/><td>
      <select name="project[status_id]">
        <option value="-1">
          all
        </option>
        <% @statuses.each do |status| %>
          <option value="<%= status.id %>">
            <%=status.title %>
          </option>
        <% end %>
      </select>
    </td>

  </tr>
  <tr>
    <td colspan='6'><%= submit_tag 'summary_by_user' %></td>
  </tr>

</table>
<%= end_form_tag %>
