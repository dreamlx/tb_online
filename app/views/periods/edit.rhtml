<h1><%=_ "Editing %s", Period.human_name %></h1>

<%= error_messages_for :period %>

<% form_for(:period, :url => period_path(@period), :html => { :method => :put }) do |f| %>
  <fieldset>
    <p>
      <label for="Period_number"><%= Period.human_attribute_name("number") %></label>
      <%= f.text_field :number %>
    </p>

    <p>
      <label for="Period_starting_date"><%= Period.human_attribute_name("starting_date") %></label>
      <%= f.date_select :starting_date %>
    </p>

    <p>
      <label for="Period_ending_date"><%= Period.human_attribute_name("ending_date") %></label>
      <%= f.date_select :ending_date %>
    </p>

  </fieldset>
  <p>
    <%= submit_tag _("Update") %>
  </p>
<% end %>

<%= link_to _('View'), period_path(@period) %> |
<%= link_to _('Back'), periods_path %>
